{{!
    @template block_myoverview/course-action-menu

    This template renders action menu for each course.

    Example context (json):
    {
        "configs": []
    }
}}
<a href="{{{newoverrideurl}}}" class="btn btn-primary">{{#str}} newoverride, availability_maxviews {{/str}}</a>
{{#hasoverrides}}
    <table class="table generaltable">
    <thead>
        <tr>
            <td>{{#str}} coursemodule, availability_maxviews {{/str}}</td>
            <td>{{#str}} participant, availability_maxviews {{/str}}</td>
            {{#typeadd}}
                <td>{{#str}} maxviews_add, availability_maxviews {{/str}}</td>
            {{/typeadd}}
            {{^typeadd}}
                <td>{{#str}} maxviews, availability_maxviews {{/str}}</td>
            {{/typeadd}}
            <td>{{#str}} maxviews, availability_maxviews {{/str}}</td>
            <td>{{#str}} lastreset, availability_maxviews {{/str}}</td>
            <td>{{#str}} overrider, availability_maxviews {{/str}}</td>
            <td>{{#str}} overridetime, availability_maxviews {{/str}}</td>
            <td>{{#str}} actions {{/str}}</td>
        </tr>
    </thead>
    <tbody>
        {{#overrides}}
            <tr>
              <td>{{coursemodule}}</td>
              <td>{{userfullname}}</td>
              <td>{{maxviews}}</td>
              <td>{{#lastreset}}{{#userdate}} {{lastreset}} , {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}{{/lastreset}}</td>
              <td>{{overrider}}</td>
              <td>{{#userdate}} {{date}} , {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}</td>
              <td>
              <a href="{{{overrideurl}}}" class="btn btn-secondary">{{#str}} edit {{/str}}</a>
              <a href="{{{deleteoverrideurl}}}" class="btn btn-secondary">{{#str}} delete {{/str}}</a>
              </td>
            </tr>
        {{/overrides}}
    </tbody>
    </table>
<a href="{{{newoverrideurl}}}" class="btn btn-primary">{{#str}} newoverride, availability_maxviews {{/str}}</a>
{{/hasoverrides}}
{{^hasoverrides}}
  <h3>{{#str}} nooverrides, availability_maxviews {{/str}} </h3>
{{/hasoverrides}}
